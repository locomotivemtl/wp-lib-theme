{
    "type": "library",
    "name": "locomotivemtl/wp-lib-theme",
    "description": "Locomotive's WordPress Theme Library",
    "license": "MIT",
    "authors": [
        {
            "name": "Locomotive",
            "homepage": "https://locomotive.ca"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "anthonybudd/wp_ajax": "^1.0",
        "composer/installers": "^1.0 || ^2.0",
        "mcaskill/php-html-build-attributes": "^1.0",
        "timber/timber": "2.x-dev"
    },
    "autoload": {
        "psr-4": {
            "WpLib\\": "inc/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        },
        "installer-disable": true
    }
}
